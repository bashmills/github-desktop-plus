{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug current test file",
      "cwd": "${workspaceFolder}",
      "args": [
        "--disable-warning=ExperimentalWarning",
        "--experimental-test-module-mocks",
        "--import",
        "tsx",
        "--import",
        "./app/test/globals.mts",
        "--test",
        "${relativeFile}"
      ],
      "envFile": ".test.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
